<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background" >
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="#ff9d9e9d"
                    android:centerColor="#ff5a5d5a"
                    android:centerX="0.75"
                    android:endColor="#ff747674"
                    android:angle="0"
            />
        </shape>
    </item>
    

    <item android:id="@android:id/progress" >
        <clip android:clipOrientation="vertical" android:gravity="bottom" >
            <shape>
                <corners android:radius="5dip" />
                <gradient
                        android:startColor="@color/SpeedbarYellowStart"
                        android:centerColor="@color/SpeedbarYellowCenter"
                        android:centerX="0.75"
                        android:endColor="@color/SpeedbarYellowEnd"
                        android:angle="0"
                />
            </shape>
        </clip>
    </item>
    
    
    <item android:id="@android:id/secondaryProgress" >
        <clip android:clipOrientation="vertical" android:gravity="bottom" >
            
            <shape 
        		android:shape="rectangle" android:width="10dp">
            	<solid android:color="@color/SpeedbarSecondaryRed" />
            	<padding android:bottom="1dp"/>
        	</shape>
            
        </clip>
    </item>
      
    

</layer-list>

