<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_std_h"
        android:layout_marginTop="@dimen/space_std_h"
        android:text="@string/hkey_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_std_h"
        android:layout_marginLeft="@dimen/space_std_w"
        android:layout_marginRight="@dimen/space_std_w"
        android:layout_marginTop="@dimen/space_std_h"
        android:text="@string/hkey_info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/SpeedbarYellowCenter" />

    <ListView
        android:id="@+id/listView_keys"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space_std_h" >

    </ListView>

</LinearLayout>
