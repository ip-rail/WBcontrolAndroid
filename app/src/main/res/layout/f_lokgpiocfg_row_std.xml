<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/grau1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_gpiorow_pinname"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/txt_normal_standard"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_gpiorow_functionname"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/txt_normal_standard"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_empty"
        android:layout_weight="3" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="@dimen/button_min_w"
        android:layout_height="@dimen/switchbutton_min_h"
        android:text="@string/lokgpio_switch_txt"
        android:id="@+id/switch_gpiorow"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:showText="true"
        android:textOn="@string/lokgpio_switch_on"
        android:textOff="@string/lokgpio_switch_off"
        android:textAppearance="@style/txt_normal_standard"
        android:singleLine="false"
        android:layout_weight="1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_gpiorow_menu"
        android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical" />

</LinearLayout>