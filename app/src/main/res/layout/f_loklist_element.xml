<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/space_std_h"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView_loklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitStart" />

    <TextView
        android:id="@+id/textView_loklist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/loklist_transp_grey1"
        android:padding="4dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_loklist_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/loklist_transp_ora1"
        android:padding="4dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imageView_loklist_online"
        android:layout_width="@dimen/loklist_online_size"
        android:layout_height="@dimen/loklist_online_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/space_std_h"
        android:background="@color/loklist_offline" />

    <ImageView
        android:id="@+id/imageView_loklist_man"
        android:layout_width="@dimen/loklist_online_size"
        android:layout_height="@dimen/loklist_online_size"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_margin="@dimen/space_std_h"
        android:layout_toLeftOf="@id/imageView_loklist_online"
        android:src="@drawable/loklist_manual" />

</RelativeLayout>
