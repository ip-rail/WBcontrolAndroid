<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/textView_dialog_cfg_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="TextView"
        android:textAppearance="@style/txt_dialog_headline" android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editText_dialog_cfg_str_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_dialog_cfg_str"
        android:layout_below="@+id/textView_dialog_cfg_str"
        android:layout_margin="4dp" android:inputType="text" android:minWidth="150dp" android:layout_centerHorizontal="true">

        <requestFocus />
    </EditText>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_below="@id/editText_dialog_cfg_str_data" android:paddingTop="4dp">

        <Button
            android:id="@+id/button_dialog_cfg_str_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/save" android:layout_weight="1"/>

        <Button
            android:id="@+id/button_dialog_cfg_str_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text="@string/gen_cancel" />

    </LinearLayout>

</RelativeLayout>